if participacion_jornada
    div(style="overflow-x: auto;")
        table.ten.columns.offset-by-one
            thead
                tr
                    th.center(style="min-width: 100px") Jugador
                    each partido in participacion_jornada.jornada.partidos
                        th.center(style="min-width: 100px")
                            img(src= url('/storage/' + partido.equipoLocal.imagen) height="32")
                            span vs
                            img(src= url('/storage/' + partido.equipoVisita.imagen) height="32")
            tbody
                each participacion in quiniela.participacions
                    tr 
                        td.hideextra(style="overflow-x: hidden;")= participacion.usuario.nombre  
                        - x = false;
                        each partido in participacion_jornada.jornada.partidos
                            
                            each part in participacion_jornada.jornada.participacionesJornada
                                if part.id_participacion == participacion.id
                                    each pronostico in part.pronosticos
                                        if pronostico.id_partido == partido.id
                                            - x = true; 
                                            if quiniela.permitir_marcador
                                                if pronostico.id_equipo_ganador == partido.resultado.id_equipo_ganador
                                                    td.center.success-background= pronostico.resultado_local + "-" + pronostico.resultado_visita
                                                else   
                                                    td.center= pronostico.resultado_local + "-" + pronostico.resultado_visita
                                            else
                                                if pronostico.id_equipo_ganador == partido.resultado.id_equipo_ganador
                                                    td.center.success-background.center
                                                        img(src= url('/storage' + partido.equipoVisita.imagen) height="32")
                                                else
                                                    td.center
                                                        img(src= url('/storage' + partido.equipoVisita.imagen) height="32")
            
                            if !x 
                                td.center 

else
    h6 No es posible ver los resultados de esta jornada al no haber enviado tu quiniela.