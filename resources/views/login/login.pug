extend /layouts/app_user

block title
    title Login

block content
    div.container
        br
        br
        form(action=(url('/login/signin')) method="post")
            input(type="hidden" name="_token" value=csrf_token())
            input(type="hidden" name="redirectTo" value=redirectTo)
            div.row.center
                img(src=(url('/img/logo.png')) width="85%")
            br
            br
            div.row
                h6.six.columns.offset-by-three.center.white-color-text Introduzca su c√≥digo de acceso
            div.row
                input.six.columns.offset-by-three.white-color-text(type="text" name="codigo" value=old('codigo'))
            br
            div.row
                button.six.columns.offset-by-three.primary-btn(type="submit") Ingresar
            br
            each error in errors.all()
                p.error.center =error



