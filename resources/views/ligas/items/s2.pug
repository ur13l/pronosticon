div.ten.columns.offset-by-one
    div.center.row
        img(src=participacion.quiniela.liga.logo height="200")

    .center.row 
        if participacion.quiniela.liga.proximaJornada[1] != "proximaJornada"
            if participacion.participacionProximaJornada[1] != "participacionProximaJornada"
                button.ten.columns.offset-by-one.primary-btn(onclick="location.href='"+ url('/quinielas/contestar/' +  participacion.quiniela.liga.proximaJornada.id +'/' + participacion.quiniela.id) +"'") Ver últimos resultados

            else 
                 button.ten.columns.offset-by-one.primary-btn(onclick="location.href='"+ url('/quinielas/contestar/' + participacion.quiniela.liga.proximaJornada.id + "/" + participacion.quiniela.id) +"'") Contestar #{participacion.quiniela.liga.proximaJornada.nombre}
        else if participacion.quiniela.liga.jornadaActual[1] != "jornadaActual"
            if participacion.participacionJornadaActual[1] != "participacionJornadaActual"
                button.ten.columns.offset-by-one.primary-btn(onclick="location.href='"+ url('/quinielas/contestar/' + participacion.quiniela.liga.jornadaActual.id + "/" + participacion.quiniela.id) +"'") Ver últimos resultados

            else 
                 button.ten.columns.offset-by-one.primary-btn(onclick="location.href='"+ url('/quinielas/contestar/' + participacion.quiniela.liga.jornadaActual.id + "/" + participacion.quiniela.id) +"'") Contestar #{participacion.quiniela.liga.jornadaActual.nombre}

        else 
            h5.orange-text Espere al administrador para que cargue la próxima jornada.
    .center.row
        a(href=url('/quinielas/reglas/' + participacion.quiniela.id)) Ver Reglas
        